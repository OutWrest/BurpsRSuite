@model BurpsRSuite.Models.AccountViewModels.LoginViewModel

@{
    ViewBag.Title = "Register";
}

<h2>@ViewData["Title"]</h2>

<hr />

<div class="container-fluid">
    <div class="login-clean row justify-content-md-center">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" type="text" name="UserName" placeholder="Username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" type="password" name="Password" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" class="form-control" type="checkbox" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">Register</button>
            </div>
        </form>
        <div class="col-sm text-center">
            <h4 class="">Login to your account</h4>
            <embed src="~/images/BurpsRSuite.svg" class="img-fluid" alt="BurpsRSuite Logo">
        </div>
    </div>
</div>