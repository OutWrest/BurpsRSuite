@model BurpsRSuite.Models.AccountViewModels.ForgotPasswordViewModel

@{
    ViewBag.Title = "Forgot Password";
}

<h2>@ViewData["Title"]</h2>

<hr />

<div class="container-fluid">
    <div class="login-clean row justify-content-md-center">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" type="email" name="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountNumber"></label>
                <input asp-for="AccountNumber" class="form-control" type="text" name="AccountNumber" />
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">Submit</button>
            </div>
        </form>
        <div class="col-sm text-center">
            <embed src="~/images/BurpsRSuite.svg" class="img-fluid" alt="BurpsRSuite Logo">
        </div>
    </div>
</div>